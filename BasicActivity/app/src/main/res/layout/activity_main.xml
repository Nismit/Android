<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ciccc.basicactivity.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Name" />

    <Button
        android:text="REVERSE BUTTON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reverseButton"
        android:onClick="reverseButton"
        android:layout_below="@+id/editTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="PREFIX BUTTON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prefixButton"
        android:onClick="prefixButton"
        android:layout_below="@+id/reverseButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SUFFIX BUTTON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suffixButton"
        android:onClick="suffixButton"
        android:layout_below="@+id/prefixButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suffixButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/resultView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="28sp" />
</RelativeLayout>
