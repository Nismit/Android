<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="7dp"
    android:paddingTop="7dp">

    <ImageView
        android:layout_width="110dp"
        app:srcCompat="@android:color/darker_gray"
        android:id="@+id/imageView"
        android:contentDescription="Thumbnail Image"
        android:padding="10dp"
        android:layout_height="110dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp">

        <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textStyle="normal|bold"
            android:textSize="15sp"
            tools:text="Title Title Title Title Title Title Title"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:textSize="13sp"
            android:text="Description"
            android:paddingTop="5dp"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec iaculis odio ut metus..." />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/siteURL"
                android:textSize="12sp"
                android:paddingTop="5dp"
                tools:text="www.google.com"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sitePublishDate"
                android:layout_weight="1"
                tools:text="2017/01/26"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:textAlignment="viewEnd"
                android:paddingRight="10dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>